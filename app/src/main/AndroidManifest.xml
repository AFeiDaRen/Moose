<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moose.com.ac">
    android:versionCode="1"
    android:versionName="0.5"

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/login"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BigNewsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ArticleViewActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".About"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Collects"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".History"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BehaviorChart"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Reset"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Search"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".util.chrome.WebviewActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="m.acfun.tv"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".SynchronizeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <service
            android:name=".util.chrome.KeepAliveService"
            android:exported="true" />
    </application>

</manifest>
