<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme.Tabs" parent="AppTheme">
        <item name="colorAccent">@color/textColorButton</item>
    </style>

    <style name="textSubtitleStyle.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textSubtitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/textview_padding</item>
        <item name="android:paddingRight">@dimen/textview_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="textTitleGrayStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="textRankStyle">
        <item name="android:paddingTop">@dimen/textview_padding</item>
        <item name="android:paddingBottom">@dimen/textview_padding</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="AppCardView" parent="BaseAppCardView">
        <item name="android:foreground">@drawable/abc_item_background_holo_light</item>
    </style>
    <!-- =========== -->
    <!-- Card styles -->
    <!-- =========== -->
    <style name="BaseAppCardView">
        <item name="cardBackgroundColor">?attr/themedCardBackgroundColor</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--about-->
    <style name="layoutPadding">
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
        <item name="android:paddingTop">@dimen/padding_16</item>
    </style>

    <style name="HeadlineTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textContentStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">@style/textAppearanceContentNormal</item>
    </style>

    <style name="mainChannel" parent="textContentStyle">
        <item name="android:paddingBottom">@dimen/padding_16</item>
        <item name="android:paddingTop">@dimen/padding_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/magin_8</item>
    </style>

    <style name="textAppearanceContentNormal">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>
    </style>

    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
</resources>