<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ababab</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <!--========-->
    <!--toolbar style-->
    <style name="AppToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
    </style>
    <!--========-->

    <style name="DayTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="statusBarColor">@color/colorPrimary</item>
        <item name="appBarColor">@color/colorPrimary</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="cardColor">@color/md_white</item>
        <item name="android:textColorPrimary">@color/md_grey_900</item>
        <item name="android:textColorSecondary">@color/md_grey_500</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark" tools:ignore="NewApi">@color/md_black</item>
        <item name="statusBarColor">@color/md_black</item>
        <item name="appBarColor">@color/md_grey_900</item>
        <item name="backgroundColor">@color/md_grey_1100</item>
        <item name="cardColor">@color/md_grey_800</item>
    </style>

    <style name="MaterialLightTheme" parent="Theme.AppCompat.Light">
        <item name="baseColor">@color/md_black</item>
        <item name="textColor">#202020</item>
        <item name="sendrytextColor">#727272</item>
        <item name="hinttextColor">#9b9b9b</item>
        <item name="dividersColor">#dbdbdb</item>
    </style>

    <style name="MaterialDarkTheme" parent="Theme.AppCompat.Light">
        <item name="baseColor">@color/md_white</item>
        <item name="textColor">@color/md_white</item>
        <item name="sendrytextColor">#bdbdbd</item>
        <item name="hinttextColor">#646464</item>
        <item name="dividersColor">#3c3c3c</item>
    </style>

    <style name="AppTheme.Tabs" parent="AppTheme">
        <item name="colorAccent">@color/textColorButton</item>
    </style>

    <style name="textSubtitleStyle.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textSubtitleStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textTitleStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="textRankStyle">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/textColorButton</item>
    </style>

    <style name="AppCardView" parent="BaseAppCardView">
        <item name="android:foreground">@drawable/abc_item_background_holo_light</item>
    </style>
    <!-- =========== -->
    <!-- Card styles -->
    <!-- =========== -->
    <style name="BaseAppCardView">
        <item name="cardBackgroundColor">?attr/themedCardBackgroundColor</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <!--about-->
    <style name="layoutPadding">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="HeadlineTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textContentStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textAppearance">@style/textAppearanceContentNormal</item>
    </style>

    <style name="textAppearanceContentNormal">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
