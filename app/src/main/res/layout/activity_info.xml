<moose.com.ac.ui.widget.MultiSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--moose.com.ac.ui.view.MultiSwipeRefreshLayout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_swipe_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_margin="@dimen/magin_8"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_chenkin"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccentLight"
                        android:gravity="center"
                        android:text="@string/main_check_in"
                        android:textColor="@color/textColorButton"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/profile_logo"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_above="@id/profile_chenkin"
                        android:layout_marginLeft="16dp"
                        android:background="@color/colorContents" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccentLight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/log_out"
                        android:textColor="@color/textColorButton" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/profile_uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="16dp"
                        android:padding="5dp"
                        android:text="eterye"
                        android:textColor="@color/textColorButton" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_8">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/profile_qian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="5dp"
                    android:text="eterye" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_8">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/profile_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="5dp"
                    android:text="2014-12-01" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_8">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/profile_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="5dp"
                    android:text="å¥³" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            android:id="@+id/snak_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorContents" />
    </RelativeLayout>
</moose.com.ac.ui.widget.MultiSwipeRefreshLayout>